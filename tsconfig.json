{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".", 
    "paths": {
      "@infra/*": ["core/infra/*"],
      "@ui/*": ["core/ui/*"],
      "@handlers/*": ["apps/api-sender/handlers/*"],
      "@web/*": ["apps/web/*"]
    }
  },
  "include": ["apps/**/*", "packages/**/*", "core/**/*"],
  "exclude": ["node_modules", "**/dist", ".next"]
}
